{
  "compilerOptions": {
    "target": "ES2015",
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "references": []
}
